<scroll-view scroll-y="true">
<navigator url="../courseVideoPlayer/courseVideoPlayer">
    <view class="meta">
        <image class="poster" src="{{movie.images.large}}" background-size="cover"></image>
        <text class="title">{{movie.titleB}}({{movie.year}})</text>
        <text class="info">评分：{{movie.rating.average}}</text>
        <text class="info">导演：<block wx:for="{{movie.directors}}">{{item}}</block></text>
        <text class="info">主演：<block wx:for="{{movie.casts}}">{{item}}</block></text>
    </view>
    <view class="summary">
      <text class="label">摘要：</text>
      <text class="content">{{movie.summary}}</text>
    </view>
    </navigator>
</scroll-view>